#!/usr/bin/env ruby
ENV['RAILS_ENV'] ||= 'production'
require File.expand_path(File.dirname(__FILE__) + "/../config/environment")
require 'rubygems'
require 'daemons'

SHARED_DIR = "tmp"

Daemons.run_proc('unicorn_monitor', :dir_mode => :normal, :dir =>     "#{SHARED_DIR}/pids", :log_output => true) do
  begin
    UnicornMonitor.start
  rescue SignalException
    # why this does not work?
  end
end
