<ul id="pages_menu" class="side_menu">
  <%- ['All', 'Bookmarks',
       #'Assignments',
       'Articles', 'Messages', 'Projects', 'Events'].each do |name|
    name_downcase = name.downcase
    icon = name_downcase.singularize
    count, style = pages_menu_count_and_style(name_downcase)
    current = name_downcase == params[:stream_filter] ? 'current' : ''
    name = t("stream.#{name_downcase}")
    -%>
    <li id="menu-<%= name_downcase %>" class="<%= style %> <%= current %>"><h5 class="<%= icon %>-icon icon">
        <%= link_to "#{name}#{count}".html_safe,
          stream_path(:stream_filter => name_downcase), :class => 'data-remote' %>
        <span></span>
      </h5></li>
  <%- end -%>
</ul>
