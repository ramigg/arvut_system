<%- if @skip_pages == StreamController::ITEMS_PER_PAGE -%>
  $(".column-content").removeClass('content-wide').html("<%= escape_javascript(render('page_stream_layout')).html_safe%>");
  $(".column-widgets").show();
  kabtv.sketches.stopPollingSketches();
  kabtv.questions.stopPollingQuestions();
  kabtv.tabs.stopPollingPresets();
<%- else -%>
  $(".more_items").prev().append("<hr />");
  $(".more_items").replaceWith("<%= escape_javascript(render('page_stream')).html_safe%>");
<%- end -%>


	$('li.current').removeClass('current');
<% if @is_tag %>
	$('#menu-<%= @stream_filter + @modifier.to_s %>').addClass('current');
<% else %>	
	$('#menu-<%= @stream_filter %>').addClass('current');
<% end %>
