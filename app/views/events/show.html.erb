<%- content_for :content_width do -%>content-wide<%- end -%>
<%- content_for :hide_widgets do -%>please do not display widgets!!!<%- end -%>
<%= render "shared/breadcrumbs", :page => @page%>
<div class="content-stream event-stream">
	<%= render "shared/content_actions", :page => @page %>
  <div class="tabs">
    <!--span class="active"><%= link_to 'Stream', '#', :remote => true %></span>
    <span><%= link_to 'Gallery', '#', :remote => true %></span-->
  </div>
  <div class="bgnd">
    <%= render_widget 'stream_container' %>
    <div class="clear"></div>
  </div>
  <%- if @page.chat_enabled? -%>
    <div align="middle">
      <iframe height="350" width="100%" frameborder="0" scrolling="no"
              marginheight="0" marginwidth="0" allowtransparency="true"
              src="http://chatroll.com/embed/chat/bbtalk?id=7Xr_NCoBulQ&platform=html&w=$0">
      </iframe>
    </div>
    <div class="clear"></div>
  <%- end -%>
  <%- if current_user.is_stream_manager? || current_user.is_admin? || current_user.is_stream_operator? -%>
      <span style="float:right;margin-left:30px;"><%= link_to 'Manage', '#', :onclick => "$('.admin').toggle(); return false;" %></span>
    <div class="admin">
      <%= render_widget 'stream_admin' %>
    </div>
  <%- end -%>
  <div class="clear"></div>
</div>
