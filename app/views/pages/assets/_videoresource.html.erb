<%
video = question
id = video.object_id
image = video.image
url = video.url
%>
<div class="video">
  <h4><%= video.name %></h4>
  <%= raw video.description %>
  <%- unless video.embed.empty? -%>
    <%= raw video.embed %>
  <%- else -%>
    <a id="video_<%= id %>" class="video_object"
       style="display: block;width: 500px;height: 375px;"
       href="#"
       >
    </a>
    <script type="text/javascript">
      $(document).ready(function() {
        $f("video_<%= id %>",{src: '<%= Rails.configuration.site_prefix %>/flowplayer/flowplayer.commercial-3.2.16.swf', wmode: 'transparent'},{
          key:'#\@432d5aedb59612f8458',
          playlist:[
            <%- unless image.empty? -%>
            {url: '<%= image %>', autoPlay: true},
            <%- end -%>

            {url: '<%= video.url %>', autoPlay: <%= video.is_autoplay? %>}
      ],
      // show stop button so we can see stop events too
      plugins: {
        controls: {
          url: 'flowplayer.controls-3.2.15.swf',
          stop: true
        }
      }
    });
  });
    </script>
    <div class="clear"></div>
  <%- end -%>
</div>
