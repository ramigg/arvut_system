<%
audio = question
id = audio.object_id
%>
<div class="audio">
  <h4><%= audio.name %></h4>
  <%= raw audio.description %>
  <%- unless audio.embed.empty? -%>
    <%= raw audio.embed %>
  <%- else -%>
    <a id="audio_<%= id %>" class="audio_object" style="display: block; width: 500px; height: 30px;"
       href="#"
       ></a>
    <script type="text/javascript">
      $(document).ready(function() {
        $f("audio_<%= id %>",{src: '/flowplayer/flowplayer-3.2.5.swf', wmode: 'transparent'},{
          key:'#\@932a7f91ab5747d7f90',
          clip:{
            url: '<%= audio.url %>',
            autoPlay: <%= audio.is_autoplay? %>
          },
          // show stop button so we can see stop events too
          plugins: {
            controls: {
              url: 'flowplayer.controls-3.2.3.swf',
              stop: true,
              fullscreen: false,
              height: 30,
              autoHide: false
            }
          }
        });
      });
    </script>
    <div class="clear"></div>
  <%- end -%>
</div>