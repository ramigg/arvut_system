<%- if @tags %>
    <hr/>
    <h4><%= t('stream.tags_menu') %>:</h4>
    <ul class="side_menu side_tags">
      <%- @tags.each do |tag| %>
          <li id="menu-tag<%= tag %>" class="read">
            <h5>
              <%= link_to tag, stream_path(:stream_filter => 'tag', :modifier => tag), :class => 'data-remote' %>
            </h5>
          </li>
      <%- end %>
    </ul>
<%- end %>