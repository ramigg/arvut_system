<%
   red_tags = [
           'Convention', 'Desert Convention', 'כנס במדבר', 'כנסים', 'Конгресс в пустыне', 'КОНГРЕСС', 'CONGRESO', 'Convención en el Desierto',
           'KONGRESS', 'CONGRESSO', 'Congresso no Deserto', 'подготовка к конгрессу', 'הכנה לכנס', 'convention preparation', 'Preparación para el congreso'
   ].map(&:upcase)
   blue_tags = [].map(&:upcase)
%>
<%- if @tags %>
    <hr/>
    <h4><%= t('stream.tags_menu') %>:</h4>
    <ul class="side_menu side_tags">
      <%- @tags.each do |tag| %>
          <%
             up_tag = tag.to_s.upcase
             special_tag_style = if red_tags.find { |e| e.match(up_tag) }
                                   'color: red;'
                                 elsif blue_tags.find { |e| e.match(up_tag) }
                                   'color: blue;'
                                 else
                                   ''
                                 end %>
          <li id="menu-tag<%= tag.id %>" class="read">
            <h5>
              <%= link_to tag, stream_path(:stream_filter => 'tag', :modifier => tag.to_s), :class => 'data-remote', :style => special_tag_style %>
            </h5>
          </li>
      <%- end %>
    </ul>
<%- end %>
